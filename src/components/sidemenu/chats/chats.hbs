{{#if folded}}
<div class="chats chats_folded">
  <div class="button__fold-menu-container">
    {{>button id="fold-btn" class="button__fold-menu"}}
  </div>
  
  <ul class="chats__list">
    {{#each chatsArr}}
    <li>
      {{>chat  avatar=avatar 
              owner=owner
              message=message
              lastMessageTime=lastMessageTime
              newMessages=newMessages
              folded=../folded
      }}
    </li>
  {{/each}}
  </ul>
</div>
{{else}}
<div class="chats">
  <div class="button__fold-menu-container">
    {{>button id="fold-btn" class="button__fold-menu" onclick=foldSidemenuHandler}}
  </div>
  <ul class="chats__list">
    {{#each chatsArr}}
      <li>
        {{>chat  avatar=avatar 
                owner=owner
                message=message
                lastMessageTime=lastMessageTime
                newMessages=newMessages
                folded=../folded
        }}
      </li>
    {{/each}}
  </ul>
</div>
{{/if}}
